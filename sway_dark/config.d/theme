# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 3
gaps outer 3

# Hide titlebar on windows: 
default_border pixel 2

# Default Font
font pango:JetBrainsMono 10

# Thin borders:
smart_borders off

# Set wallpaper:
exec ~/.azotebg

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

## Window decoration
# class                 border  backgr. text    indicator child_border
client.focused          #FFFFFF #434c5e #81a1c1 #707880   #707880
client.focused_inactive #707880 #434c5e #81a1c1 #707880   #707880
client.unfocused        #707880 #434c5e #81a1c1 #707880   #707880
client.urgent           #707880 #ebcb8b #2e3440 #707880   #4c566a

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}
